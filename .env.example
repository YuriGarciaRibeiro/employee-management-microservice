# Database Configuration
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=employeedb
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# RabbitMQ Configuration
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest

# JWT Configuration
# IMPORTANT: Change this secret in production!
JWT_SECRET=your-super-secret-key-change-this-in-production-must-be-at-least-32-characters-long
JWT_ISSUER=EmployeeManagement
JWT_AUDIENCE=EmployeeManagementUsers
JWT_EXPIRATION_MINUTES=60
JWT_REFRESH_EXPIRATION_DAYS=7

# SMTP/Email Configuration (Optional - leave empty if not using)
# For Gmail: Enable "App Passwords" in your Google Account
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@employeemanagement.com

# Seq Logging
SEQ_URL=http://seq:5341

# SonarQube (for CI/CD)
SONAR_HOST_URL=http://sonarqube:9000
SONAR_TOKEN=your-sonar-token-here

# Application URLs
CADASTRO_API_URL=http://localhost:5001
NOTIFICACOES_API_URL=http://localhost:5002

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
